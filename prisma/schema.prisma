generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Notes {
  id Int @id @default(autoincrement())
  title String
  description String
  tags Tags[] @relation("NotesTags")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tags {
  id Int @id @default(autoincrement())
  name String @unique

  notes Notes[] @relation("NotesTags")
}